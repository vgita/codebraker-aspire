{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"${workspaceFolder}/Docker.sln",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary;ForceNoAlign"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "publish",
			"command": "dotnet",
			"type": "process",
			"args": [
				"publish",
				"${workspaceFolder}/Docker.sln",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary;ForceNoAlign"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "watch",
			"command": "dotnet",
			"type": "process",
			"args": ["watch", "run", "--project", "${workspaceFolder}/Docker.sln"],
			"problemMatcher": "$msCompile"
		},
		{
			"type": "docker-build",
			"label": "docker-build: debug",
			"dependsOn": ["build"],
			"dockerBuild": {
				"tag": "docker:dev",
				"target": "base",
				"dockerfile": "${workspaceFolder}/Codebreaker.GameAPIs/Dockerfile",
				"context": "${workspaceFolder}",
				"pull": true
			},
			"netCore": {
				"appProject": "${workspaceFolder}/Codebreaker.GameAPIs/Codebreaker.GameAPIs.csproj"
			}
		},
		{
			"type": "docker-build",
			"label": "docker-build: release",
			"dependsOn": ["build"],
			"dockerBuild": {
				"tag": "docker:latest",
				"dockerfile": "${workspaceFolder}/Codebreaker.GameAPIs/Dockerfile",
				"context": "${workspaceFolder}",
				"platform": {
					"os": "linux",
					"architecture": "amd64"
				},
				"pull": true
			},
			"netCore": {
				"appProject": "${workspaceFolder}/Codebreaker.GameAPIs/Codebreaker.GameAPIs.csproj"
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: debug",
			"dependsOn": ["docker-build: debug"],
			"dockerRun": {},
			"netCore": {
				"appProject": "${workspaceFolder}/Codebreaker.GameAPIs/Codebreaker.GameAPIs.csproj",
				"enableDebugging": true
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: release",
			"dependsOn": ["docker-build: release"],
			"dockerRun": {},
			"netCore": {
				"appProject": "${workspaceFolder}/Codebreaker.GameAPIs/Codebreaker.GameAPIs.csproj"
			}
		}
	]
}
